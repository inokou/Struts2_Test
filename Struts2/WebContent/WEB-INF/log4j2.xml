<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Properties>
		<Property name="filename">C:/pleiades/log/logTest2.log</Property>
	</Properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{yyy/MM/dd HH:mm:ss.SSS} %-5level %class{36} %L %M - %msg%n" />
		</Console>
		<RollingFile name="RollingFile" fileName="${filename}"
			filePattern="$${sys:catalina.base}/logs/test-%d{yyyy-MM-dd HHmmss}.logTest.txt.gz">
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} | [%t] | %-5level | %c{36} | %msg%n" />
			<Policies>
				<SizeBasedTriggeringPolicy size="1 MB" />
				<!--  <TimeBasedTriggeringPolicy /> -->
			</Policies>
		</RollingFile>
		<File name="ApplicationLog" fileName="logTest2.log" />
	</Appenders>

	<Loggers>
		<Root level="trace">
			<AppenderRef ref="RollingFile" />
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>
